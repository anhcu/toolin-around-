<!-- RENDERS EVERY CATEGORY AS A CLICKABLE CARD W/ CATEGORY NAME & ICON -->
<div class="col s12 m6 l4 center">
  <div class="card">
    <a href="/category/{{id}}">
      <div class="card-image">
        <span style="font-size: 3em; color: #1a237e;">
          <i class="{{class}}"></i>
        </span>
      </div>
      <div class="card-title">
        <span class="card-content indigo-text text-darken-2">{{name}}</span>
      </div>
    </a>
  </div>
</div>